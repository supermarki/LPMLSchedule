<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_schedule"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_schedule_number"
        style="@style/GreenTextViewScheduleItem"
        android:layout_weight="2"

        />

    <TextView
        android:id="@+id/item_schedule_time"
        style="@style/TextViewScheduleItem"
        android:layout_weight="4"


        />

    <TextView
        android:id="@+id/item_schedule_subject"
        style="@style/GreenTextViewScheduleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="8"

        />

    <TextView
        android:id="@+id/item_schedule_room"
        style="@style/TextViewScheduleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"

        />
</LinearLayout>